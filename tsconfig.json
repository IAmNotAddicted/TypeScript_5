{
    "compilerOptions":
    {
      "target": "ES6",          // Вибір рівня ECMAScript
      "module": "commonjs",     // Формат модулів
      "strict": true,           // Включає сувору перевірку типів
      "outDir": "./dist",       // Куди буде скомпільований код
      "rootDir": "./src"        // Де знаходяться вихідні файли
    },

    "include": ["src/**/*.ts"]  // Вказує, що потрібно компілювати файли з папки src
}
  